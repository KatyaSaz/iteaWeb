<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <filter>
  	<filter-name>GzipFilter</filter-name>
  	<filter-class>user.service.GZipServletFilter</filter-class>
  </filter>
       
  <servlet>
	<servlet-name>userAutorisation</servlet-name>
	<servlet-class>user.controller.UserControllerAutorisation</servlet-class>
  </servlet>
  
  <servlet>
	<servlet-name>userRegistration</servlet-name>
	<servlet-class>user.controller.UserControllerRegistration</servlet-class>
  </servlet>
  
  <servlet-mapping>
	<servlet-name>userAutorisation</servlet-name>
	<url-pattern>/autorisation</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
	<servlet-name>userRegistration</servlet-name>
	<url-pattern>/registration</url-pattern>
  </servlet-mapping>
  
  <filter-mapping>
  	<filter-name>GzipFilter</filter-name>
  	<servlet-name>userAutorisation</servlet-name>
  </filter-mapping>
  
  <filter-mapping>
  	<filter-name>GzipFilter</filter-name>
  	<servlet-name>userRegistration</servlet-name>
  </filter-mapping>
  
</web-app>
